# Judicaita Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Tunix & Gemma Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMMA_MODEL_NAME=gemma-3n
TUNIX_ENDPOINT=https://api.tunix.google.com/v1

# Model Configuration
MODEL_TEMPERATURE=0.3
MODEL_MAX_TOKENS=512
MODEL_TOP_P=0.95

# Application Settings
APP_NAME=Judicaita
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO
LOG_FORMAT=json

# Document Processing
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FORMATS=pdf,docx,doc,txt
OCR_ENABLED=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=False

# Database (if needed for audit logs)
DATABASE_URL=sqlite:///./judicaita.db
# For PostgreSQL: postgresql://user:password@localhost/judicaita

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# Citation Database
CITATION_DATABASE_PATH=./data/legal_citations.db
LEGAL_JURISDICTION=US  # US, UK, EU, etc.

# Compliance & Audit
AUDIT_LOG_ENABLED=True
AUDIT_LOG_PATH=./logs/audit.log
COMPLIANCE_MODE=STRICT  # STRICT, MODERATE, PERMISSIVE
RETENTION_DAYS=2555  # 7 years (legal standard)

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Feature Flags
ENABLE_REASONING_TRACE=True
ENABLE_CITATION_MAPPING=True
ENABLE_PLAIN_ENGLISH_SUMMARY=True
ENABLE_COMPLIANCE_AUDIT=True

# Experimental Features
EXPERIMENTAL_FEATURES=False

# GRPO Training Configuration
GRPO_CHECKPOINT_PATH=  # Path to GRPO-tuned checkpoint (leave empty for default)
GRPO_BASE_MODEL=google/gemma-2-2b-it
GRPO_LEARNING_RATE=1e-5
GRPO_NUM_EPOCHS=3
GRPO_BATCH_SIZE=4
GRPO_USE_LORA=True
